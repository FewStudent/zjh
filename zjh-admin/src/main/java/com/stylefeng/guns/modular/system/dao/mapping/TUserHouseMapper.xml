<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.modular.system.dao.TUserHouseMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.stylefeng.guns.modular.system.model.TUserHouse">
        <id column="id" property="id" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="user_id" property="userId" />
        <result column="hotel" property="hotel" />
        <result column="check_in_date" property="checkInDate" />
        <result column="check_out_date" property="checkOutDate" />
        <result column="room_type" property="roomType" />
        <result column="price" property="price" />
        <result column="total" property="total" />
        <result column="total_price" property="totalPrice" />
        <result column="pay_type" property="payType" />
        <result column="room_num" property="roomNum" />
        <result column="vacant" property="vacant" />
        <result column="splice_room" property="spliceRoom" />
        <result column="splice_people" property="splicePeople" />
        <result column="status" property="status" />
        <result column="remark_name" property="remarkName" />
        <result column="remark_content" property="remarkContent" />
        <result column="end" property="end" />
        <result column="status_date" property="statusDate" />
        <result column="end_date" property="endDate" />
        <result column="s_remark_name" property="sRemarkName" />
        <result column="s_remark_content" property="sRemarkContent" />
        <result column="e_remark_name" property="eRemarkName" />
        <result column="e_remark_content" property="eRemarkContent" />
        <result column="a_remark_name" property="aRemarkName" />
        <result column="a_remark_content" property="aRemarkContent" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, create_time, update_time, user_id, hotel, check_in_date, check_out_date, room_type, price, total, total_price, pay_type, room_num, vacant, splice_room, splice_people, status, remark_name, remark_content, end, status_date, end_date, s_remark_name, s_remark_content, e_remark_name, e_remark_content, a_remark_name, a_remark_content
    </sql>

    <select id="findAllUserHouses" resultMap="BaseResultMap">
        select a.*,b.name AS userIdName,b.phone AS contacts from t_user_house a,t_user b where a.user_id = b.id
        <if test="status != null">
            and a.status = #{status}
        </if>
        <if test="lrole != null">
            and b.create_by = #{lrole}
        </if>
        <if test="end != null">
            and a.end = #{end}
        </if>
        <if test="search != null and search != ''">
            and (b.name like CONCAT('%',#{search},'%')
            or b.company like CONCAT('%',#{search},'%')
            or b.phone like CONCAT('%',#{search},'%'))
        </if>
        order by create_time desc
    </select>

</mapper>
